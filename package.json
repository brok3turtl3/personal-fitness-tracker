{
  "name": "personal-fitness-tracker",
  "version": "1.1.0",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:dev": "ng build --configuration=production && electron .",
    "electron:build": "ng build --configuration=production && electron-builder",
    "electron:publish": "ng build --configuration=production && electron-builder --publish always"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "chart.js": "^4.5.1",
    "ng2-charts": "^7.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "electron-updater": "^6.1.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.21",
    "@angular/cli": "^18.2.21",
    "@angular/compiler-cli": "^18.2.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "puppeteer": "^24.37.3",
    "typescript": "~5.5.2"
  },
  "build": {
    "appId": "com.personal-fitness-tracker.app",
    "productName": "Personal Fitness Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/personal-fitness-tracker/browser/**/*",
      "electron/**/*"
    ],
    "icon": "electron/icon.png",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "publish": {
      "provider": "github",
      "owner": "brok3turtl3",
      "repo": "personal-fitness-tracker"
    }
  }
}
